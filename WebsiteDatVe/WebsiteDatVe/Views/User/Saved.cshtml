
@{
    ViewBag.Title = "Saved";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="booking-wrap">
    <h3>Danh sách đã lưu</h3>
    <p class="sub-title">Nơi lưu giữ những sản phẩm mà bạn quan tâm!</p>
    <div class="ticket-container">
        <div class="ticket">
            <div class="ticket-content">
                <div class="left">
                    <img src="~/Assets/images/Logo-Vietjet.png" />
                </div>
                <div class="center">
                    <div class="center-item">
                        <h3>7:30</h3>
                        <span>Hồ Chí Minh</span>
                    </div>
                    <div class="center-item">
                        <p>--- <i class="fas fa-plane"></i> ---</p>
                        <span>2h</span>
                    </div>
                    <div class="center-item">
                        <h3>9:30</h3>
                        <span>Đà Nẵng</span>
                    </div>
                </div>
                <div class="right">
                    <div class="icon"><i class="fas fa-bookmark"></i></div>
                    <h3>320,000 VNĐ/khách</h3>
                    <button name="btnChonVe">Chọn vé</button>
                </div>
            </div>
            <div class="ticket-option">
                <p>Chi tiết chuyến bay</p>
                <p>Chi tiết vé</p>
            </div>
        </div>
    </div>
</div>

